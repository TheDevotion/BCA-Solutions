#include<iostream.h>
#include<conio.h>
#include<string.h>

class City{
public :
	int code, population;
	char name[100];

	void setCity(){
		cout << "Enter City Code : ";
		cin >> code;
		cout << "Enter City Name : ";
		cin >> name;
		cout << "Enter City Population : ";
		cin >> population;
	}

	void displayCity(){
		cout << "City Code : " << code << endl;
		cout << "City Name : " << name << endl;
		cout << "City Population : " << population << endl;
	}

	void sort(City &i, City &j){
		if(i.population > j.population ){
			City temp = i;
			i = j;
			j = temp;
		}
	}
};


int main(){
	clrscr();
	City *c;
	int n, i, choice;

	do{
		cout << "\n1.Accept City Details "
			<< "\n2. Display City Details "
			<< "\n3. Sort Cities in ascending Order "
			<< "\n4. Display Particular City "
			<< "\n5. Exit"
			<< "\nEnter Choice : ";
		cin >> choice;

		switch(choice){
			case 1 :
				cout << "Enter Total No of Cities : ";
				cin >> n;
				c = new City[n];

				for(i=0; i<n; i++){
					cout << "Enter City details " << i + 1 << " : " << endl;
					c[i].setCity();
				}
				break;

			case 2 :
				for(i=0; i<n; i++){
					cout << "Displaying Details of " << i+1 << " City : " << endl;
					c[i].displayCity();
				}
				break;
			case 3 :
				for(i=0; i<n; i++){
					for(int j=i+1; j<n-1; j++){
						c[i].sort(c[i], c[j]);
						}
					}
				}
				cout << "Cities Sorted successfully";
				break;
			case 4 :
				char na[100];
				cout << "Enter City name : ";
				cin >> na;
				for(i=0; i<n; i++){
					if(strcmp(c[i].name, na) == 0){
						cout << "City Found " << endl;
						c[i].displayCity();
					}
					else{
						cout << "City Not Found " << endl;
					}
				}
				break;
			case 5 :
				cout << "exiting...";
				break;
			default :
				cout << "invalid choice";
		}

	}while(choice != 5);
	getch();
	return 0;
}