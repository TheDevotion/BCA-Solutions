class Cuboid{
public :
	float l, b, h;
	void setValues(float l, float b, float h){
		this->l = l;
		this->b = b;
		this->h = h;
	}

	void getValues(){
		cout << "Length : " << l << endl;
		cout << "Breadth : " << b << endl;
		cout << "Height : " << h << endl;
	}

	inline float volume(){
		float v = l * b * h;
		return v;
	}

	inline float surfaceArea(){
		float sa = (2 * ((l * b) + (b * h) + (l * h)));
		return sa;
	}
};

