#include<iostream.h>
#include<conio.h>

class Student{
public :
	int rno;
	char name[100];

	void setStudent(){
		cout << "Enter Roll No : ";
		cin >> rno;
		cout << "Enter Student Name : ";
		cin >> name;
	}

	void displayStudent(){
		cout << "Roll No : " << rno << endl;
		cout << "Name : " << name << endl;
	}
};

class Theory : virtual protected Student{
public :
	int m1, m2, m3, m4;
	void setTheory(){
		cout << "Enter 4 Subjects Marks : ";
		cin >> m1 >> m2 >> m3 >> m4;
	}

	void displayTheory(){
		cout << "Marks of 4 Subjects : "
			<< m1 << " " << m2 << " " << m3 << " " << m4 << endl;
	}

	int tMarks(){
		return m1+m2+m3+m4;
	}

};

class Practical : virtual protected Student{
public :
	int p1, p2;
	void setPractical(){
		cout << "Enter 2 Practical Subjects Marks : ";
		cin >> p1 >> p2;
	}

	void displayPractical(){
		cout << "Marks of 2 Practical Subjects : ";
		cout << p1 << " " << p2 << endl;
	}

	int pMarks(){
		return p1+p2;
	}

};

class Result : public Theory, public Practical{
public :
	float totalMarks, per;
	char grade;

	void calculate(){
		totalMarks = (pMarks() + tMarks());
		per = totalMarks / 600 * 100;

	if(per >= 90){
		grade = 'A';
	}
	elseif(per >= 75){
		grade = 'B';
	}
	elseif(per >= 60){
		grade = 'c';
	}
	elseif(per >= 40){
		grade = 'D';
	}
	else{
		grade = 'F';
	}
	}

	void setResult(){
		setStudent();
		setPractical();
		setTheory();
	}

	void diplayResult(){
		displayStudent();
		displayPractical();
		displayTheory();
		cout << "Total Marks : " << totalMarks << endl;
		cout << "Percentage : " << per << endl;
		cout << "Grade : " << grade << endl;
	}
};

