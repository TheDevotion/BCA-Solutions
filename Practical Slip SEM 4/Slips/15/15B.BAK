#include<iostream.h>
#include<conio.h>

class Seller{
public :
	char name[100], pname[100], month[20];
	int sQuantity, tQuantity;
	float commission, price;

	void setSeller(){
		cout << "Enter Seller Name : ";
		cin >> name;
		cout << "Enter Product Name : ";
		cin >> pname;
		cout << "Enter Product Price : ";
		cin >> price;
		cout << "Enter Month : ";
		cin >> month;
		cout << "Enter Sales Quantity : ";
		cin >> sQuantity;
		cout << "Enter Target Quantity : ";
		cin >> tQuantity;

	}

	void calculate(){
		if(sQuantity > tQuantity){
			commission = ((sQuantity * price) * 25 / 100) + ((tQuantity * price) * 10 / 100);
		}
		else if(sQuantity == tQuantity){
			commission = ((tQuantity * price) * 10 / 100);
		}
		else{
			commission = 0;
		}
	}

	void display(){
		cout << "Seller Name : " << name << endl;
		cout << "Product Name : " << pname << endl;
		cout << "Month : " << month << endl;
		cout << "Sale Quantity : " <<  sQuantity << endl;
		cout << "Target Quantity : " << tQuantity << endl;
		cout << "Commission : " << commission << endl;
	}
};


int main(){
	clrscr();
	Seller *s;
	int n, i;
	cout << "Enter Total No of Sellers : ";
	cin >> n;
	s = new Seller[n];

	for(i=0; i<n; i++){
		cout << "Enter Details of " << i+1 << " seller : " << endl;
		s[i].setSeller();
		s[i].calculate();
	}

	cout << "Displaying Details Of Seller : " << endl;
	for(i=0; i<n; i++){
		cout << "Details of " << i+1 << " seller : " << endl;
		s[i].displaySeller();
	}
	getch();
	return 0;
}