#include<iostream.h>
#include<conio.h>

class MyMatrix{
public :
	int r, c, j;
	int matrix[100][100];

	MyMatrix(int row, int col){
		r = row;
		c = col;
	}

	void setMatrix(){
		cout << "Enter values for " << r << "X" << c << " matrix : " << endl;
		for(int i=0; i<r; i++){
			for(j=0; j<c; j++){
				cin >> matrix[i][j];
			}
		}
	}

	void displayMatrix(){
		cout << "Matrix : " << endl;
		for(int i=0; i<r; i++){
			for(j=0; j<c; j++){
				cout << matrix[i][j] << " ";
			}
			cout << endl;
		}
	}

	void operator-(){
		MyMatrix transpose(c, r);

		for(int i=0; i<r; i++){
			for(j=0; j<c; j++){
				transpose.matrix[j][i] = matrix[i][j];
			}
		}

		transpose.displayMatrix();
	}

	void operator++(){
		MyMatrix ans(r, c);
		for(int i=0; i<r; i++){
			for(j=0; j<c; j++){
				ans.matrix[i][j] = matrix[i][j] + 1;
			}
		}

		ans.display();
	}
};

int main(){
	clrscr();
	int row, col;
	cout << "Enter Row and Columns : ";
	cin >> row >> col;

	MyMatrix m(row, col);
	m.setMatrix();
	m.displayMatrix();
	cout << "Matrix after Transpose : " << endl;
	m.operator-();
	cout << "Matrix after increment by 1 : " << endl;
	m.operator++();
	getch();
	return 0;
}